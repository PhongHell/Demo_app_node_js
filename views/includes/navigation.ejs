<div class="backdrop"></div>
<header class="main-header">
    <button id="side-menu-toggle">Menu</button>
    <nav class="main-header__nav">
        <ul class="main-header__item-list">
            <li class="main-header__item">
                <a class="<%= path === '/' ? 'active' : '' %>" href="/">Điểm danh</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/staff' ? 'active' : '' %>" href="/staff">Thông tin cá nhân</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/timesheet' ? 'active' : '' %>" href="/timesheet">Tra cứu giờ làm</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/vaccine' ? 'active' : '' %>" href="/vaccine">Thông tin covid</a>
            </li>
            <% if (isManager) { %> 
                <li class="main-header__item">
                    <a class="<%= path === '/employeeVaccine' ? 'active' : '' %>" href="/employeeVaccine">Thông tin covid của nhân viên</a>
                </li>    
            <% } %>
        </ul>
        <ul class="main-header__item-list">
            <% if (!isAuthenticated) { %>
                <li class="main-header__item">
                    <a class="<%= path === '/login' ? 'active' : '' %> btnLogin" href="/login">Login</a>
                </li>
            <% } else { %>
                <li class="main-header__item">
                    <form action="/logout" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit">Logout</button>
                    </form>
                </li>
            <% } %>
        </ul>
    </nav>
</header>

<nav class="mobile-nav">
    <ul class="mobile-nav__item-list">
        <li class="mobile-nav__item">
            <a class="<%= path === '/' ? 'active' : '' %>" href="/">Điểm danh</a>
        </li>
        <li class="mobile-nav__item">
            <a class="<%= path === '/staff' ? 'active' : '' %>" href="/staff">Thông tin cá nhân</a>
        </li>
        <li class="mobile-nav__item">
            <a class="<%= path === '/timesheet' ? 'active' : '' %>" href="/timesheet">Tra cứu giờ làm</a>
        </li>
        <li class="mobile-nav__item">
            <a class="<%= path === '/vaccine' ? 'active' : '' %>" href="/vaccine">Thông tin covid</a>
        </li>
        <% if (isManager) { %> 
            <li class="mobile-nav__item">
                <a class="<%= path === '/employeeVaccine' ? 'active' : '' %>" href="/employeeVaccine">Thông tin covid của nhân viên</a>
            </li>    
        <% } %>
    </ul>
    <% if (!isAuthenticated) { %>
        <li class="mobile-nav__item">
            <a class="<%= path === '/login' ? 'active' : '' %> btnLogin" href="/login" >Login</a>
        </li>
    <% } else { %>
        <li class="mobile-nav__item">
            <form action="/logout" method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button type="submit" class='btnLogin'>Logout</button>
            </form>
        </li>
    <% } %>
</nav>